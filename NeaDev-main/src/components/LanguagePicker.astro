---
import { languages } from '../data/content';

const { lang } = Astro.props;
---

<div class="flex gap-6 text-sm font-medium">
  {Object.entries(languages).map(([code, label]) => (
    <a
      href={`/${code}`}
      class:list={[
        "nav-item",
        code === lang ? "active" : ""
      ]}
    >
      {label}
    </a>
  ))}
</div>
