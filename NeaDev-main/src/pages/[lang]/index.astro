---
import Layout from "../../components/Layout.astro";
import { content, languages } from "../../data/content";

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = content[lang];

const dotColors = {
  "green-500": "bg-green-500 shadow-[0_0_10px_rgba(34,197,94,0.6)]",
  "neutral-600": "bg-neutral-600",
  "neutral-500": "bg-neutral-500"
};

const tagColors = {
  "green": "bg-green-500/10 text-green-300 border border-green-500/20",
  "blue": "bg-blue-500/10 text-blue-300 border border-blue-500/20",
  "purple": "bg-purple-500/10 text-purple-300 border border-purple-500/20"
};
---

<Layout title={`${t.hero.title} - Portfolio`} lang={lang}>
  <div class="space-y-20 pb-20">

    <!-- Hero Section -->
    <section class="text-center py-20 animate-fade-in-up">
      <div class="relative inline-block">
        <div class="absolute inset-0 blur-3xl bg-green-500/20 rounded-full"></div>
        <h1 class="relative text-7xl font-bold mb-6 tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-white to-neutral-400">
          {t.hero.title}
        </h1>
      </div>
      <p class="text-2xl text-neutral-300 max-w-2xl mx-auto font-light leading-relaxed">
        {t.hero.role}
      </p>
    </section>

    <!-- About Section -->
    <section class="animate-fade-in-up" style="animation-delay: 200ms;">
      <div class="glass-card p-10 relative overflow-hidden group">
        <div class="absolute top-0 right-0 w-64 h-64 bg-green-500/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none group-hover:bg-green-500/10 transition-colors duration-500"></div>
        <h2 class="text-3xl font-bold mb-6 text-green-400 flex items-center gap-3">
          <span class="w-8 h-1 bg-green-500 rounded-full"></span>
          {t.about.title}
        </h2>
        <div class="text-lg space-y-4 text-neutral-300 leading-relaxed">
          <p>{t.about.p1}</p>
          <p>{t.about.p2}</p>
        </div>
      </div>
    </section>

    <!-- Experience Section -->
    <section class="animate-fade-in-up" style="animation-delay: 400ms;">
      <h2 class="text-3xl font-bold mb-10 text-white flex items-center gap-3">
        <span class="w-8 h-1 bg-green-500 rounded-full"></span>
        {t.experience.title}
      </h2>
      <div class="space-y-8 relative pl-8 ml-4 border-l border-white/10 animate-stagger">
        {t.experience.list.map((job) => (
          <div class="relative group">
            <span class={`absolute -left-[3.25rem] top-6 h-5 w-5 rounded-full border-4 border-neutral-900 ${dotColors[job.color] || 'bg-neutral-600'} transition-transform duration-300 group-hover:scale-125`}></span>
            <div class="glass-card p-8 hover:border-green-500/30">
              <div class="flex flex-col md:flex-row md:items-center justify-between mb-4 gap-2">
                <div>
                  <h3 class="text-2xl font-bold text-white group-hover:text-green-400 transition-colors">{job.company}</h3>
                  <p class="text-lg font-medium text-green-500/80">{job.role}</p>
                </div>
                <span class="text-neutral-400 font-mono text-sm bg-white/5 px-3 py-1 rounded-full border border-white/5 w-fit">{job.period}</span>
              </div>
              <p class="text-neutral-300 leading-relaxed">{job.description}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Projects Section -->
    <section class="animate-fade-in-up" style="animation-delay: 600ms;">
      <h2 class="text-3xl font-bold mb-10 text-white flex items-center gap-3">
        <span class="w-8 h-1 bg-green-500 rounded-full"></span>
        {t.projects.title}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 animate-stagger">
        {t.projects.list.map((project) => (
          <div class="glass-card p-8 flex flex-col h-full group">
            <div class="flex justify-between items-start mb-4">
              <h3 class="text-xl font-bold text-white group-hover:text-green-400 transition-colors">{project.name}</h3>
              <span class={`text-xs font-mono px-3 py-1 rounded-full ${tagColors[project.tagColor] || 'bg-neutral-800'}`}>
                {project.tag}
              </span>
            </div>
            <p class="text-neutral-400 leading-relaxed flex-grow">{project.description}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Skills Section -->
    <section class="animate-fade-in-up" style="animation-delay: 800ms;">
      <h2 class="text-3xl font-bold mb-10 text-white flex items-center gap-3">
        <span class="w-8 h-1 bg-green-500 rounded-full"></span>
        {t.skills.title}
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 animate-stagger">
        {t.skills.list.map((skill) => (
          <div class="glass-card p-6 text-center group cursor-default">
            <span class="block text-xl font-bold mb-2 text-white group-hover:text-green-400 transition-colors">{skill.name}</span>
            <span class="text-sm text-neutral-400 group-hover:text-neutral-300 transition-colors">{skill.desc}</span>
          </div>
        ))}
      </div>
    </section>

  </div>
</Layout>
